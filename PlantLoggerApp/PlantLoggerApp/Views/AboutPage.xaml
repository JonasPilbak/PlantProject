<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlantLoggerApp.Views.AboutPage"
             xmlns:vm="clr-namespace:PlantLoggerApp.ViewModels"
             xmlns:model="clr-namespace:PlantLoggerApp.Models"
             xmlns:local="clr-namespace"
             xmlns:sys="clr-namespace:System.ComponentModel.Design;assembly=netstandard"
             Title="{Binding Title}" >
   
    








    <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
                        <Button Text="Take picture" Command="{Binding AddPicture} " ></Button>
        <Image Source="{Binding ThePlants.ImageSource}"></Image>
        <Button Text="Make notification" Command="{Binding MakeNotification}"></Button>
                                             
                                             
        
        
        
        
        <Button Text="Find a picture" Command="{Binding FindPhoto}"></Button>
        <Label Text="{Binding Name}"></Label>
        





    </StackLayout>

                
    


</ContentPage>
