<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlantLoggerApp.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Type of plant:" FontSize="Medium" />
        <Label Text="{Binding Type}" FontSize="Small"/>
        <Label Text="Is there a warning:" FontSize="Medium" />
        <Label Text="{Binding Temperature_warning}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>